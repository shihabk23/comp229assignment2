<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Contact_Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Add full name"
                    name="Contact_Name" 
                    value="<%= business.Contact_Name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Add Email"
                    name="Email" 
                    value="<%= business.Email %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="contactnTextField">Contact_Number</label>
                    <input type="text" class="form-control"
                    id="contactnTextField"
                    placeholder="Add Contact_Number"
                    name="Contact_Number" 
                    value="<%= business.Contact_Number %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/business-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>