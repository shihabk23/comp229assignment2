<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  

  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <h1><%= title %></h1>

            <% if(typeof displayName == 'string' && displayName) { %>
                <a href="/business-list/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Business List</a>
            <% } %>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                <% if(typeof displayName == 'string' && displayName) { %>
                    <th class="text-center col-2">Contact_Name</th>
                    <th class="text-center col-3">Email</th>
                    <th class="text-center col-2">Contact_Number</th>
                <% } else { %>
                    <th class="text-center col-3">Contact_Name</th>
                    <th class="text-center col-3">Email</th>
                    <th class="text-center col-4">Contact_Number</th>
                <% } %>    
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < BusinessList.length; count++) { %>
                    <tr class="d-flex">
                       <% if(typeof displayName == 'string' && displayName) { %>
                        <td class="text-center col-2"><%= BusinessList[count].Contact_Name %></td>
                        <td class="text-center col-3"><%= BusinessList[count].Email %></td>
                        <td class="text-center col-2"><%= BusinessList[count].Contact_Number %></td>
                        <td class="text-center col-3">

                            <a href="/business-list/edit/<%= BusinessList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i> Edit</a>
                        </td>
                        <td class="text-center col-2">
                            <a href="/business-list/delete/<%= BusinessList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                        <% } else { %>
                        <td class="text-center col-3"><%= BusinessList[count].Contact_Name %></td>
                        <td class="text-center col-3"><%= BusinessList[count].Email %></td>
                        <td class="text-center col-4"><%= BusinessList[count].Contact_Number %></td>
                        
                        <% } %>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>
  





